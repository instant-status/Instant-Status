{
  "apps": [
    {
      "name": "API",
      "script": "dist/src/server.js",
      "cwd": "/usr/local/instantstatus/current/api",
      "instances": 1,
      "exec_mode": "cluster",
      "wait_ready": true,
      "listen_timeout": 30000,
      "node_args": "-r dotenv/config",
      "env": {
        "DOTENV_CONFIG_PATH": "is-config/.prisma.env",
        "NODE_ENV": "production"
      }
    }
    {
      "name": "Monitor",
      "script": "monitor/dist/server",
      "cwd": "/usr/local/instantstatus/current",
      "instances": "max",
      "exec_mode": "cluster",
      "wait_ready": true,
      "listen_timeout": 30000,
      "node_args": "--max-old-space-size=256 --max-semi-space-size=2"
    }
  ]
}
