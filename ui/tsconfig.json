{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["./@types", "./node_modules/@types"],
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019"],
    "paths": {
      "@instant-status/appConfig": ["config/appConfig"],
      "@instant-status/apiConfig": ["config/apiConfig"],
    }
  },
  "includes": ["src/**/*"],
  "exclude": ["node_modules", "dist/**/*"]
}
